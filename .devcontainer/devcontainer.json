{
  "name": "School Calendar",
  "dockerComposeFile": "docker-compose.yml",
  "workspaceFolder": "/workspace",
  "service": "app",
  "remoteUser": "node",
  "forwardPorts": [8080],
  "waitFor": "postCreateCommand",
  "postCreateCommand": "sudo chown node node_modules && npm install && chmod +x ./node_modules/husky/lib/bin.js && cp .env.example .env && cp .env.test.example .env.test",
  "postStartCommand": "nohup bash -c 'socat TCP4-LISTEN:8080,reuseaddr,fork TCP:pgadmin4:8080 &'",
  "postAttachCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "vivaxy.vscode-conventional-commits",
        "firsttris.vscode-jest-runner",
        "redhat.vscode-yaml",
        "Gruntfuggly.todo-tree"
      ],
      "settings": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "eslint.format.enable": true,
        "[typescript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "conventionalCommits.scopes": [
          "scheduler",
          "common",
          "devcontainer",
          "shared"
        ]
      }
    }
  }
}
